<script>
    document.addEventListener('turbo:load', function () {
        const buttons = document.querySelectorAll('.square-button');

        buttons.forEach(button => {
            button.addEventListener('click', () => {
                buttons.forEach(item => item.classList.remove('square-button-selected'));
                button.classList.add('square-button-selected');
            });
        });

        document.querySelector('.square-button-dashboard').click();
    });
</script>

